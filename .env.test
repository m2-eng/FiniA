# Test Environment Configuration for FiniA
# Used by pytest to configure test-specific settings

# Test Execution
TEST_MODE=true
FINIA_TEST_USER=local_test
FINIA_ENV=test

# Database
DB_TEST_HOST=127.0.0.1
DB_TEST_PORT=3306
DB_TEST_USER=root
DB_TEST_PASSWORD=password  # Change this!
DB_TEST_NAME=finia_test

# API Testing
TEST_API_BASE_URL=http://localhost:8000
TEST_API_TIMEOUT=30
TEST_REQUEST_RETRY_COUNT=3

# Performance Testing
PERF_BASELINE_TOLERANCE=10  # Percent - warn if slower than baseline
PERF_CRITICAL_TIMEOUT=2000  # ms - for year overview queries

# Logging
LOG_LEVEL=DEBUG
PYTEST_LOG_LEVEL=INFO

# Skip certain tests (comma-separated)
SKIP_TESTS=
# Example: SKIP_TESTS=test_slow_query,test_requires_external_api

# Parallel Execution
PYTEST_PARALLELIZABLE=true
PYTEST_WORKER_COUNT=4  # auto = CPU count

# Reports
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
REPORT_OUTPUT_DIR=./tests/reports
